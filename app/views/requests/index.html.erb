<h1>Requests#index</h1>

<div class="container">

  <div class="two-columns-dash">
    <div class="left-column-dash">
      <div class="text-center">
        <%= cl_image_tag @user.photo, :width=> 300, :height=>300, :crop=>"fill", class: "show-photo", style:"margin-bottom: 10px;" %> <br>
        <p>
          <%= @user.first_name %> <%= @user.last_name %>
        </p>
      </div>
      <p>Cases</p>
      <% @requests.each do |request| %>
      <ul>
        <li><a><%= request.title  %></a> <br></li>
      </ul>
      <% end %>
      <a>
        <p>Documents</p>
      </a>
    </div>
    <div class="right-column-dash">
      <% @requests.each do |request| %>
      <div class="message">
        <%= cl_image_tag request.lawyer.user.photo, :width=> 100, :height=>100, :crop=>"fill", class: "avatar-large"%>
        <div class="message-name">
          <h3><%= request.lawyer.user.first_name %><%= request.lawyer.user.last_name %></h3>
          <p>10/07/17</p>
        </div>
        <div class="message-body">
          <p><strong><%= request.title %></strong></p>
          <p>
            <%= request.description %>
          </p>
        </div>
        <div class="message-status">
          <p class="status pending">Pending</p>
          <p class="price">â‚¬345</p>
        </div>
      </div>
      <% end %>

    </div>
  </div>

