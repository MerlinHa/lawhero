<div class="container">
  <div class="row">
    <h1 class="text-center h1-headline-blue">Your Request</h1>
    <div class="card-request-show">
      <div class="col-xs-12 col-sm-2">
        <div class="card-request-details text-center">
          <%= cl_image_tag @case.lawyer.photo, :width=> 300, :height=>300, :crop=>"fill", class: "show-photo-medium" %>
          <p class="text-center"><strong><%= @case.lawyer.user.last_name + ' ' + @case.lawyer.user.first_name%></strong></p>
        </div>
      </div>
      <div class="col-xs-12 col-sm-9">
        <div class="request-content">
          <h3><%= @case.title %></h3>
          <p><%= @case.description %><p>
        </div>
      </div>
      <div class="col-xs-12 col-sm-1">
        <div class="request-status text-center">
          <p>Payment: </p>
          <p><strong><%= @case.order.state %></strong><p>
        </div>
      </div>
    </div>
  </div>
</div>
