<div class="container container-new-payment">
  <div class="col-sm-6 col-sm-offset-3">
    <h1 class="h1-headline-blue">Case new page</h1>
      <div class="row">
        <div class="form-new-case">
          <%= form_for ([@lawyer, @case]), html: { multipart: true } do |f| %>
          <div class="form-group col-md-12">
            <label for="case-title">Title</label>
              <%= f.text_field :title, class:"form-control"%>
          </div>
          <div class="form-group col-md-12">
            <label for="case-description">Description</label>

              <%= f.text_area :description, class:"form-control", id:"big-fat-input-field"%>

          </div>
          <%= f.file_field :documents, as: :file, multiple: :true, name: "documents[]" %>
          <%= f.button :submit, class:"btn btn-primary" %>
          <% end %>
        </div>
      </div>
  </div>
</div>
