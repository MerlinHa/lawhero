<h1>Case new page</h1>

<div class="container">
  <div class="row">
    <%= simple_form_for ([@lawyer, @case]), html: { multipart: true } do |f| %>
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.file_field :documents, multiple: true %>
      <%= f.button :submit %>
    <% end %>
  </div>
</div>
