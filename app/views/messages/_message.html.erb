<div class="message">
  <%= cl_image_tag message.user.photo, :width=> 100, :height=>100, :crop=>"fill", class: "avatar-medium", style:"margin-bottom: 10px;" %> <br>
  <div class="message-name">
    <h3><%= message.user.first_name %></h3>
    <p><%= message.created_at.strftime("%m-%e-%y %H:%M") %></p>
  </div>
  <div class="message-body">

    <p>
      <%= message.content %>
    </p>
  </div>
</div>
